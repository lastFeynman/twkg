<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>twkg</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>twkg.filter.LoginFilter</filter-class>
    <init-param>
      <param-name>noLogin</param-name>
      <param-value>index.jsp;;searchResult.jsp;user.jsp;register.jsp;player.jsp;LoginServlet;RegisterServlet</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>twkg.filter.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>PlayerFilter</filter-name>
    <filter-class>twkg.filter.PlayerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PlayerFilter</filter-name>
    <url-pattern>/player.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>RecordFilter</filter-name>
    <filter-class>twkg.filter.RecordFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RecordFilter</filter-name>
    <url-pattern>/record.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SearchFilter</filter-name>
    <filter-class>twkg.filter.SearchFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SearchFilter</filter-name>
    <url-pattern>/searchResult.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AdminSearchFilter</filter-name>
    <filter-class>twkg.filter.AdminSearchFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminSearchFilter</filter-name>
    <url-pattern>/admin/adminSearch.jsp</url-pattern>
  </filter-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
      <taglib-location>/WEB-INF/fmt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/fmt-rt</taglib-uri>
      <taglib-location>/WEB-INF/fmt-rt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/core-rt</taglib-uri>
      <taglib-location>/WEB-INF/c-rt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
      <taglib-location>/WEB-INF/sql.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/sql-rt</taglib-uri>
      <taglib-location>/WEB-INF/sql-rt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/x</taglib-uri>
      <taglib-location>/WEB-INF/x.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>http://java.sun.com/jstl/x-rt</taglib-uri>
      <taglib-location>/WEB-INF/x-rt.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-app>